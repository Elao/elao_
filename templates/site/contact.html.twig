{% extends 'base.html.twig' %}

{% block content %}
    <div class="clip-paths">
        {{ include('assets/stamp-negatif.svg.twig') }}
    </div>

    <div class="container">
        <ol class="breadcrumb" itemscope itemtype="https://schema.org/BreadcrumbList">
            <li class="breadcrumb__item" itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a itemprop="item" href="{{ path('homepage') }}">
                    <span itemprop="name">Accueil</span>
                </a>
                <meta itemprop="position" content="1" />
            </li>
            <li class="breadcrumb__item"  itemprop="itemListElement" itemscope itemtype="https://schema.org/ListItem">
                <a itemprop="item" href="#">
                    <span itemprop="name">Contact</span>
                </a>
                <meta itemprop="position" content="2" />
            </li>
        </ol>

        <div class="page-contact">
            <h1 data-aos="fade-right">Écrire <span>un petit mot</span></h1>

            <div class="contact" data-aos="flip-right" data-aos-duration="400" {{ stimulus_controller('contact') }}>
                <div class="contact__3d">
                    <div class="contact__layer-soft-light"></div>
                    <div class="contact__content">
                        <div class="contact__message">
                            <p class="title">Écrivez-nous !,</p>
                            <div class="form-group">
                                <div class="form-group__message">
                                    <p>On adore recevoir du courrier <3</p>
                                    <p>C'est par là que ça se passe =></p>
                                </div>
                            </div>
                        </div>

                        <div class="contact__infos" itemscope itemtype="https://schema.org/Organization">
                            <div class="contact__image">
                                <div class="contact__layer-diagonal-light"></div>
                                <div class="contact__layer-hologram"></div>
                                <img src="{{ asset('build/images/pages/contact/stamp.svg') }}" alt="">
                            </div>
                            <p class="name" itemprop="name">elao</p>
                            <address itemprop="address" itemscope itemtype="https://schema.org/PostalAddress">
                                <a href="{{ site.contact.address.google_maps }}" target="_blank">
                                    <span itemprop="streetAddress">{{ site.contact.address.street_address }}</span><br/>
                                    <span itemprop="addressLocality">{{ site.contact.address.address_locality }}</span>
                                </a>
                            </address>
                            <address>
                                <a href="tel:+33482533719" itemprop="telephone">{{ site.contact.phone }}</a>
                                <a href="mailto:contact@elao.com" itemprop="email" data-contact-target="email">{{ site.contact.email }}</a>
                            </address>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
