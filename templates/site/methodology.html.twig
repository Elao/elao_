    {#                                {{ asset('build/images/pages/methodology/tools@2x.webp') }} 2x"#}
    {#                    >#}
    {#                    <source#}
    {#                        type="image/jpeg"#}
    {#                        srcset="{{ asset('build/images/pages/methodology/tools.jpg') }} 1x,#}
