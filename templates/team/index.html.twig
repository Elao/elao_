{% extends 'base.html.twig' %}

{% block meta_title "La tribu d'Elao" %}
{% block meta_description "Toute l'équipe d'Elao" %}

{% block content %}
    <ul class="breadcrumb">
        <li class="breadcrumb__item">
            <a href="#">Accueil</a>
         </li>
        <li class="breadcrumb__item">
            La tribu
        </li>
    </ul>

    <div class="page-team">
        <div class="banner-team">
            <div class="banner-team__title">
                <h1>Découvrez <span>notre tribu</span></h1>
            </div>
            <div class="banner-team__content">
                <img src="https://www.fillmurray.com/1280/600" alt="">
                {# TODO: once jobs are ready, wire back#}
{#                <a href="#" class="recruitment">#}
{#                    <img src="{{ asset('build/images/tipi.svg') }}" alt="">#}
{#                    <span class="recruitment__content">#}
{#                        <span class="title">Rejoindre la tribu</span>#}
{#                        3 offres#}
{#                    </span>#}
{#                    <i class="icon icon--square-bracket-right" aria-hidden="true"></i>#}
{#                    <i class="icon icon--semicolon" aria-hidden="true"></i>#}
{#                </a>#}
            </div>
        </div>

        <div class="container--narrow">
            <h2 class="h2--dash">Nos valeurs</h2>
            <div class="values">
                <span class="values__item values__item--info">
                    <i class="icon icon--quote" aria-hidden="true"></i>
                    L'humain avant tout
                </span>
                <span class="values__item values__item--tertiary">
                    <i class="icon icon--quote" aria-hidden="true"></i>
                    Rester humble et apprendre de ses erreurs
                </span>
                <span class="values__item values__item--primary">
                    <i class="icon icon--quote" aria-hidden="true"></i>
                    S'ouvrir, partager, ne rien garder pour soi
                </span>
                <a href="{{ path('values') }}" class="btn btn--secondary btn--animated">
                    <span>
                        Découvrir nos valeurs
                        <svg class="icon" xmlns="http://www.w3.org/2000/svg" x="0" y="0" viewBox="0 0 40 20">
                            <path class="tip" d="M21,2.7 28.2,10.3 21,17.4"/>
                            <path class="base" d="M28.2,10.3c-0.1,0-18.3,0-27.8,0"/>
                        </svg>
                    </span>
                </a>
            </div>

            <h2 class="h2--dash">L'équipe</h2>
            <ul class="team">
                {% for member in members %}
                    <li class="team__member">
                        <a href="{{ path('team_member', { member: member.slug }) }}">
                            <span class="image">
                                {# <span style="background: url('{{ asset(member.avatar) }}')"></span> #}
                                <span style="background: url('https://www.fillmurray.com/250/250')"></span>
                            </span>
                            <span class="name">{{ member.name }}</span>
                            <span class="job">{{ member.position }}</span>
                            <span class="certification">
                                <img src="{{ asset('build/images/certifications/symfony.svg') }}" alt="">
                                <p>Expert certifié <span>Symfony</span></p>
                            </span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
