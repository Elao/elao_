                        <li class="nav__item">
                            <a href="#">
                                <span>Nos valeurs</span>
                            </a>
                        </li>
                        <li class="nav__item">
                            <a href="#">
                                <span>La tribu</span>
                            </a>
                        </li>
                        <li class="nav__item">
                            <a href="#">
                                <span>Blog</span>
                            </a>
                        </li>
                        <li class="nav__item">
                            <a href="#">
                                <i class="icon icon--contact"></i>
                                <span>Contact</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </header>
        <main>
        {% block content %}
            <div class="container">
                {{ page.content }}
            </div>
        {% endblock content %}
        </main>
        <footer class="footer">
            <section>
                <h4>Nos liens</h4>
                {% for entry in site.menus.main|sortByWeight %}
                    <a class="{% if url(page) == url(entry.url) %} selected{% endif %}" href="{{ url(entry.url) }}">{{ entry.name }}</a>
                    {%- if not loop.last %} - {% endif %}
                {% endfor %}
            </section>
            <section>
                <h4>Nous suivre</h4>

                {% for entry in site.menus.social|sortByWeight %}
                    <a href="{{ url(entry.url) }}">{{ entry.name }}</a>
                    {%- if not loop.last %} - {% endif %}
                {% endfor %}
            </section>
        </footer>
        <script src="{{ url('/anchor.js') }}"></script>
        <script>anchors.add();</script>
        {% include 'partials/googleanalytics.js.twig' %}
    </body>
</html>
